				<groupId>org.apache.logging.log4j</groupId>
				<artifactId>log4j-jul</artifactId>
			</dependency>
			<!-- 3.have Apache Commons Logging routed to Log4j2 -->
			<dependency>
				<groupId>org.apache.logging.log4j</groupId>
				<artifactId>log4j-jcl</artifactId>
			</dependency>
			<!-- 4.have SLF4J routed to Log4j2 -->
			<dependency>
				<groupId>org.apache.logging.log4j</groupId>
				<artifactId>log4j-slf4j-impl</artifactId>
			</dependency>
			<!-- 5.have Log4j2 routed to SLF4J,The SLF4J Bridge must NOT be on the 
